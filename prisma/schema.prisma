generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model About {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  title     String?
  text      String
  resumeUrl String?
  imageUrl  String?
}

enum Status {
  PENDING
  RESPONDED
}

model Contact {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  email     String
  message   String
  status    Status   @default(PENDING)
  createdAt DateTime @default(now())
}

model Experience {
  id                       String    @id @default(auto()) @map("_id") @db.ObjectId
  jobTitle                 String
  company                  String
  startDate                DateTime
  endDate                  DateTime?
  achievements             String[]
  responsibilities         String[]
  recommendationLetterUrls String[]
  location                 String
}

model Hero {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  title String?
  text  String?
}

model Project {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  urlTitles           String[]
  urls                String[]
  projectTechnologies String[]
  projectTitle        String
  objective           String
  keyResults          String[]
  experienceId        String?
  media               String[]
  order               Int
}

model Skills {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  skills String[]
}

enum SocialNames {
  LINKEDIN
  GITHUB
  TELEGRAM
  EMAIL
}

model Social {
  id   String      @id @default(auto()) @map("_id") @db.ObjectId
  name SocialNames
  url  String
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum MediaType {
  IMAGE
  VIDEO
  PDF
}

model Media {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  url       String
  fileKey   String
  createdAt DateTime  @default(now())
  mediaType MediaType
}
