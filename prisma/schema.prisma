generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  user
}

model About {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  text      String
  resumeUrl String?
}

model Contact {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  email     String
  message   String
  createdAt DateTime @default(now())
}

model Experience {
  id                       String   @id @default(auto()) @map("_id") @db.ObjectId
  jobTitle                 String
  company                  String
  startDate                String
  endDate                  String
  achievements             String[]
  responsibilities         String[]
  recommendationLetterUrls String[]
  location                 String
}

model Hero {
  id   String  @id @default(auto()) @map("_id") @db.ObjectId
  text String?
}

model Project {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  urlTitles           String[]
  urls                String[]
  projectTechnologies String[]
  projectTitle        String
  objective           String
  keyResults          String[]
  experienceId        String?  @db.ObjectId
  images              String[]
  videos              String[]
}

model Skills {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  skills String[]
}

enum SocialNames {
  linkedin
  github
  telegram
}

model Social {
  id   String      @id @default(auto()) @map("_id") @db.ObjectId
  name SocialNames
  url  String
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
